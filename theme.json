{
  "name": "Goreem Theme",
  "slug": "goreem-theme",
  "version": "1.0.0",
  "rtl": true,
  "description": {
    "ar": "Goreem Theme هو ثيم عربي متكامل لمتاجر سلة، موجه لمتاجر الحيوانات الأليفة (خصوصًا القطط) مع تصميم عام يناسب مختلف الأنشطة. يعتمد على HTML + CSS + JS فقط، وهو متجاوب بالكامل مع الهواتف والأجهزة اللوحية.",
    "en": "Goreem Theme is a fully Arabic RTL theme for Salla stores, optimized for pet stores (especially cats) with a general-purpose design suitable for any niche. Built using pure HTML, CSS, and JavaScript."
  },
  "author": {
    "name": "Ibrahim Abbas",
    "email": "goreem.eg@gmail.com",
    "url": "https://gooreem.github.io/goreem-theme/"
  },
  "preview_url": "https://gooreem.github.io/goreem-theme/",
  "repository": "https://github.com/gooreem/goreem-theme",
  "technologies": [
    "html",
    "css",
    "javascript"
  ],
  "identity": {
    "primary_color": "#1B4FA0",
    "secondary_color": "#FF6FAF",
    "background_color": "#F7F9FC",
    "direction": "rtl",
    "language": "ar"
  },
  "assets": {
    "css": [
      "assets/css/style.css"
    ],
    "js": [
      "assets/js/main.js"
    ],
    "images_path": "assets/images/",
    "icons_path": "assets/icons/"
  },
  "pages": {
    "home": {
      "id": "home",
      "file": "index.html",
      "title": {
        "ar": "الصفحة الرئيسية",
        "en": "Home"
      }
    },
    "product": {
      "id": "product",
      "file": "product.html",
      "title": {
        "ar": "صفحة المنتج",
        "en": "Product Page"
      }
    },
    "category": {
      "id": "category",
      "file": "category.html",
      "title": {
        "ar": "صفحة التصنيف",
        "en": "Category Page"
      }
    },
    "cart": {
      "id": "cart",
      "file": "cart.html",
      "title": {
        "ar": "سلة التسوق",
        "en": "Cart"
      }
    },
    "checkout": {
      "id": "checkout",
      "file": "checkout.html",
      "title": {
        "ar": "إتمام الطلب",
        "en": "Checkout"
      }
    },
    "about": {
      "id": "about",
      "file": "about.html",
      "title": {
        "ar": "عن المتجر",
        "en": "About"
      }
    },
    "contact": {
      "id": "contact",
      "file": "contact.html",
      "title": {
        "ar": "تواصل معنا",
        "en": "Contact"
      }
    }
  },
  "routes": {
    "home": "index.html",
    "product": "product.html",
    "category": "category.html",
    "cart": "cart.html",
    "checkout": "checkout.html",
    "about": "about.html",
    "contact": "contact.html"
  },
  "sections": {
    "hero_slider": {
      "enabled": true,
      "type": "slider"
    },
    "ticker": {
      "enabled": true,
      "type": "slider"
    },
    "banners_main": {
      "enabled": true,
      "type": "banners_50_50"
    },
    "categories": {
      "enabled": true,
