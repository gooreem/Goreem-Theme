    },
    "services_with_video": {
      "enabled": true,
      "type": "video_with_banners"
    },
    "countdown": {
      "enabled": true,
      "type": "countdown"
    },
    "testimonials": {
      "enabled": true,
      "type": "slider"
    },
    "blog": {
      "enabled": true,
      "type": "articles"
    },
    "brands": {
      "enabled": true,
      "type": "slider"
    }
  },
  "salla": {
    "theme_url": "https://github.com/gooreem/goreem-theme",
